 #!/bin/bash
# Execute a command on every line of a file


# Create a multi-line file
{

 ls -1 /media/Original/ > ass

 # Note that if the output is corrupted with \[330m0
 # you need to (" unalias ls ") because of the color issue

}

# Execute echo on every line
{

  while read LINE; do echo "kiss my $LINE"; done < ass

}

# Execute mkdir on every line
{

  while read LINE; do mkdir /media/test/"$LINE"; done < ass

}

# Read from 2 or more files 
{

  while read X Y ; do echo $X - $Y ; done < <(paste file1 file2)
  
}
